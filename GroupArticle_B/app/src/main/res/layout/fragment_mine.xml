<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.lanou.yhz.article.grouparticle_b.mine.MineFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/iv_mine_ic_user_center_setting"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:background="@mipmap/ic_user_center_setting"/>
       <ImageView
           android:id="@+id/iv_mine_ic_xiaoxi"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:layout_alignParentRight="true"
           android:background="@mipmap/ic_me_xiaoxi"/>
   </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_mine_icon_1star"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/icon_1star"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_mine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="未知人类"/>
        <Button
            android:id="@+id/btn_mine_login"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="登  录"
            android:background="@color/colorAshen"/>

    </LinearLayout>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/rb_mine_offline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:text="离线缓存"
        android:drawableTop="@drawable/ic_download"
        android:textSize="11sp"
        android:button="@null" />
    <RadioButton
        android:id="@+id/rb_mine_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:text="观看历史"
        android:drawableTop="@drawable/ic_time_n"
        android:textSize="11sp"
        android:button="@null" />
    <RadioButton
        android:id="@+id/rb_mine_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:text="我喜欢的"
        android:drawableTop="@drawable/ic_like"
        android:textSize="11sp"
        android:button="@null" />
</LinearLayout>
</LinearLayout>
