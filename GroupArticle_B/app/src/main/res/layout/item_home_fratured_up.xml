<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_margin="5dp"
        android:background="@color/colorFraturedBackGround"
        android:layout_width="120dp"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/item_home_fratured_up_title"
            android:layout_centerInParent="true"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_home_fratured_up_image"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/item_home_fratured_up_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/item_home_fratured_up_content"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/item_home_fratured_up_title"/>
        <ImageView
            android:id="@+id/item_home_fratured_up_dingyue"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_fratured_up_content"
            android:src="@drawable/ic_home_home_dingyue"/>
    </RelativeLayout>


</LinearLayout>
